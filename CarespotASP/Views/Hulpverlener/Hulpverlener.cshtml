@using CarespotASP.Models

@{
    ViewBag.Title = "Hulpverlener";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hulpverlener</h2>
<hr/>


<div class="row">
    <div class="col-md-4">
        <h2>Hulpbehoevenden</h2>
        
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Email</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
  
            @if (ViewBag.HulpBehoevenden != null)
            {
                foreach (Hulpbehoevende h in ViewBag.HulpBehoevenden)
                {
                    <tr>
                        <td>@h.Naam</td>
                        <td>@h.Email</td>
                        <td><a href="/Hulpverlener/Opdrachten/@h.Id" class="btn btn-info" role="button"><span class="glyphicon glyphicon-chevron-right"></span></a></td>
                    </tr>
                }
            }
              
            </tbody>
        </table>
       
    </div>
    <div class="col-md-8">
        <h2>Opdrachten</h2>
        <br/>
        <div class="col-md-12"> 
            <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Titel</th>
                    <th>Geplaatst op</th>
                    <th></th>
                </tr>
                </thead>
               <tbody>
        @if (ViewBag.hulpvragen != null)
        {
            foreach (Hulpvraag hulpvraag in ViewBag.hulpvragen)
             {
                 <tr>
                     <td>@hulpvraag.Titel</td>
                     <td>@hulpvraag.CreateDatum</td>
                     <td>
                         <form action="hulpbehoevende" method="GET">
                             <button type="submit" class="btn btn-primary">Open</button>
                         </form>
                     </td>             
                 </tr>
             }
        }
                </tbody>
            </table>
        </div>

    </div>

</div>





