@using CarespotASP.Models
@{
    ViewBag.Title = "Opdrachten";
}

<div class="row">
    <div class="col-md-12 login">
        <h2>Mijn opdrachten</h2>
    </div>
    <div class="col-md-12">
        <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Titel</th>
                <th>Geplaatst op</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Titel</th>
                <th>Geplaatst op</th>
                <th></th>
                <th></th>
            </tr>
            </tfoot>
            <tbody>
            @foreach (Hulpvraag hulpvraag in ViewBag.hulpvragen)
            {
                <tr>
                    <td>@hulpvraag.Titel</td>
                    <td>@hulpvraag.CreateDatum</td>
                    <td>
                        <form action="hulpbehoevende" method="GET">
                            <button type="submit" class="btn btn-primary">Open</button>
                        </form>
                    </td>
                    <td>
                        <form action="/Hulpbehoevende/DeleteHulpvraag/@hulpvraag.Id" method="GET">
                            <button type="submit" class="btn btn-danger">Verwijder</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <br/>
    <button type="button" class="btn btn-default btn-lg pull-right">Nieuwe opdracht</button>
</div>